{
  "name": "eureka/component-password",
  "description": "PHP password library.",
  "type": "library",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Password\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Password\\Tests\\": "./tests"
    }
  },

  "require": {
    "php": "7.4.*||8.0.*||8.1.*||8.2.*",
    "ext-mbstring": "*"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "eureka/component-console": "^5.2",
    "phpstan/phpstan": "^1.10",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.7"
  },

  "suggest": {
    "eureka/component-console": "Provide an lightway console to execute password script helper to generate password"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
