{
  "name": "eureka/component-password",
  "description": "PHP password library.",
  "type": "library",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Password\\": "./src",
      "Eureka\\Component\\Password\\Script\\": "./scripts"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Password\\Tests\\Unit\\": "./tests/unit"
    }
  },

  "config": {
    "sort-packages": true
  },

  "require": {
    "php": "8.1.*||8.2.*||8.3.*",
    "ext-mbstring": "*"
  },

  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.51.0",
    "eureka/component-console": "^6.1.0",
    "maglnet/composer-require-checker": "^4.7.1",
    "phpstan/phpstan": "^1.10.60",
    "phpstan/phpstan-phpunit": "^1.3.16",
    "phpstan/phpstan-strict-rules": "^1.5.2",
    "phpunit/phpcov": "^9.0.2",
    "phpunit/phpunit": "^10.5.12"
  },

  "suggest": {
    "eureka/component-console": "Provide an lightway console to execute password script helper to generate password"
  }
}
